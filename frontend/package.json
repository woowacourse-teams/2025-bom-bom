{
  "name": "bom-bom-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "app",
    "shared"
  ],
  "scripts": {
    "web:start": "npm run start --workspace=web",
    "web:build": "npm run build --workspace=web",
    "web:lint": "npm run lint --workspace=web",
    "web:test": "npm run test --workspace=web",
    "app:start": "npm run start --workspace=app",
    "app:android": "npm run android --workspace=app",
    "app:ios": "npm run ios --workspace=app",
    "shared:build": "npm run build --workspace=shared",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0"
  }
}
